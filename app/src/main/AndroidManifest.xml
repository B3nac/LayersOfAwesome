<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="b3nac.LayersOfAwesome">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="b3nac.LayersOfAwesome.ImportWalletActivity"
            android:label="@string/title_activity_import_wallet"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="b3nac.LayersOfAwesome.WalletActivity"
            android:label="@string/title_activity_wallet"
            android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar" />
        <activity
            android:name="b3nac.LayersOfAwesome.GenerateWalletActivity"
            android:label="@string/title_activity_generate_wallet"
            android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar" />
        <activity
            android:name="b3nac.LayersOfAwesome.ProfileActivity"
            android:label="Profile"
            android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar" />
        <activity android:name="b3nac.LayersOfAwesome.ui.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>